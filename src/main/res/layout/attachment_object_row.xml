<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/attachmentRowView"
                android:background="@drawable/round_edittext">

    <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/attachmentRemoveButton"
            android:background="@drawable/ic_remove"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:contentDescription="@string/remove"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/attachmentPathView"
            android:layout_toEndOf="@+id/attachmentRemoveButton"
            android:layout_toRightOf="@+id/attachmentRemoveButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_alignParentTop="true"
            android:gravity="center_vertical" android:padding="5dp"/>
</RelativeLayout>